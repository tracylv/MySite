<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">

    <title><%= page_info.page_title %></title>
    <meta name ="keywords" content="<%= page_info.meta_keywords %>">
    <meta name="description" content="<%= page_info.meta_description %>">
    <meta name="author" content="<%= page_info.meta_author %>" >

    <!-- The HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
    <%- scriptLink('3rd/html5.js', {type:'text/javascript'}) %>
    <![endif]-->

    <%- scriptLink('3rd/jquery-1.9.1.min.js', {type:'text/javascript'}) %>

    <script src="/plugins/jplayer/jquery.jplayer.min.js" type="text/javascript"></script>
    <script src="/plugins/jplayer/jplayer.playlist.min.js" type="text/javascript"></script>

    <% if(geddy.config.environment == 'development'){ %>
    <%- scriptLink('build/page.raw.js', {type:'text/javascript'}) %>
    <% }else{ %>
    <%- scriptLink('build/page.min.js', {type:'text/javascript'}) %>
    <% } %>

    <%- scriptLink('config/init.js', {type: 'text/javascript'}) %>

    <link type="text/css" href="/plugins/jplayer/jplayer.pink.flag.css" rel="stylesheet" />

    <%- styleLink('build/page.min.css', {rel:'stylesheet'}) %>

    <!--[if lt IE 8]>
    <%- styleLink('build/page_ie.min.css', {rel:'stylesheet'}) %>
    <![endif]-->

    <!--[if IE 6]>
    <%- styleLink('build/page_ie6.min.css', {rel:'stylesheet'}) %>
    <![endif]-->

</head>
<body>
    <!-- Google Tag Manager -->
    <noscript><iframe src="//www.googletagmanager.com/ns.html?id=GTM-PMQCLB"
                      height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
                new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
                j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
                '//www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
        })(window,document,'script','dataLayer','GTM-PMQCLB');</script>
    <!-- End Google Tag Manager -->

    <div id="wrapper">

        <!-- header start -->
        <div id="header">
            <%= partial('header', { error: false, username: session.get("username") }); %>
        </div>
        <!-- header end -->

        <!-- menu start -->
        <div id="nav">
            <%= partial('menu', { error: false, userrole: session.get("userrole") }); %>
        </div>
        <!-- menu end -->

        <!-- content start -->
        <div id="content">
            <%- render(); %>
        </div>
        <!-- content end -->

        <!-- footer start -->
        <div id="footer">
           <%= partial('footer'); %>
        </div>
        <!-- footer end -->
    </div>
</body>
</html>

