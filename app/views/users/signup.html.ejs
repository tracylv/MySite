                            <h3>用户注册</h3>
                        </div>
                        <div class="itemslist">
                            <div class="item">
                               <input name="username" type="text" maxlength="30"/>
                            </div>
                            <div class="item">
                                <input name="password" type="password" maxlength="30"/>
                            </div>
                            <div class="item">
                                <input name="confirmpassword" type="password" maxlength="30"/>
                            </div>
                            <div class="item">
                                <input name="nickname" type="text" maxlength="30"/>
                            </div>
                        </div>
                        <div class="submit">
                            <input class="signupsubmit submitBtn"  type="submit" value="立即注册" />
                        </div>
                    </form
                </div>
            </div>
        </div>
    </div>
</div>